<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CodeDom" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FastFA\FastFA.csproj" />
    <ProjectReference Include="..\LexContext\LexContext.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Example.rl">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="&quot;$(SolutionDir)Rolex.exe&quot; &quot;$(ProjectDir)Example.rl&quot; /output &quot;$(ProjectDir)ExampleTokenizer.cs&quot; /namespace Rolex /dfagraph &quot;$(ProjectDir)dfa.jpg&quot;" />
  </Target>

</Project>
